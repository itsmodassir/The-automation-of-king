# =====================================================================
# AEROSTIC SAAS PLATFORM - ENVIRONMENT CONFIGURATION TEMPLATE
# =====================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# =====================================================================

# =====================================================================
# APPLICATION
# =====================================================================
NODE_ENV=development
PORT=3000

# =====================================================================
# DOMAINS (Update these for your deployment)
# =====================================================================
APP_DOMAIN=app.localhost
API_DOMAIN=api.localhost
WEBHOOK_DOMAIN=webhook.localhost
ADMIN_DOMAIN=admin.localhost

# =====================================================================
# DATABASE
# =====================================================================
# For development (local PostgreSQL):
# DATABASE_URL=postgres://aerostic:aerostic_password@localhost:5433/aerostic
#
# For Docker Compose:
DATABASE_URL=postgres://aerostic:aerostic_password@postgres:5432/aerostic

POSTGRES_USER=aerostic
POSTGRES_PASSWORD=aerostic_password
POSTGRES_DB=aerostic

# =====================================================================
# REDIS
# =====================================================================
# For development (local Redis):
# REDIS_URL=redis://localhost:6379
#
# For Docker Compose:
REDIS_URL=redis://redis:6379

# =====================================================================
# AUTHENTICATION & SECURITY
# =====================================================================
# Generate a secure JWT_SECRET:
# Command: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_very_long_secure_random_secret_key_here_32_chars_minimum

# Token expiration time (e.g., 7d, 24h)
JWT_EXPIRATION=7d

# AES Encryption key for sensitive data (must be exactly 32 characters)
AES_ENCRYPTION_KEY=your_32_character_encryption_key_xyz

# =====================================================================
# META/WHATSAPP INTEGRATION
# =====================================================================
# Get these from Meta/Facebook Developer Console
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_API_VERSION=v19.0

# =====================================================================
# DATABASE CONFIGURATION
# =====================================================================
# Set to 'true' ONLY during initial development setup
# MUST be 'false' in production - use migrations instead
DB_SYNC=false

# =====================================================================
# ADMIN USER SETUP
# =====================================================================
# For initial admin seeding (change these after first login)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_in_production

# =====================================================================
# RATE LIMITING
# =====================================================================
# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================================
# EMAIL CONFIGURATION (Optional - for future use)
# =====================================================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@aerostic.com

# =====================================================================
# LOGGING
# =====================================================================
LOG_LEVEL=debug
# Options: error, warn, log, debug, verbose

# =====================================================================
# STRIPE INTEGRATION (Optional - for billing)
# =====================================================================
# STRIPE_SECRET_KEY=sk_test_your_stripe_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# =====================================================================
# IMPORTANT NOTES
# =====================================================================
# 1. NEVER commit .env to version control
# 2. Use strong, random values for all secrets
# 3. Different values for dev, staging, and production
# 4. Rotate secrets regularly in production
# 5. Use environment management tools (AWS Secrets Manager, etc.) in production
# 6. DB_SYNC must be 'false' in production
# 7. NODE_ENV must be 'production' in production
